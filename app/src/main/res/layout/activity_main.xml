<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end|bottom"
            android:layout_weight="1"
            android:background="@color/black"
            android:text=""
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end|center"
            android:layout_weight="1"
            android:background="@color/black"
            android:text=""
            android:textColor="@color/white"
            android:textSize="40sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="clearOnClick"/>

            <Button
                android:id="@+id/brackets"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="()"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="bracketsOnClick"/>

            <Button
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="percentOnClick"/>

            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="divisionOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="sevenOnClick"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="eightOnClick"/>

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="nineOnClick"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="prodOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="fourOnClick"/>

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="fiveOnClick"/>

            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="sixOnClick"/>

            <Button
                android:id="@+id/subtract"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="_"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="subOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="oneOnClick"/>

            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="twoOnClick"/>

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="threeOnClick"/>

            <Button
                android:id="@+id/addition"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_operations"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="addOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inverse"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="^"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="powerOfOnClick"/>

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="zeroOnClick"/>

            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_numbers"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="dotOnClick"/>

            <Button
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="equalsOnClick"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>